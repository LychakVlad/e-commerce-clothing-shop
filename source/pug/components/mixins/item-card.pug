mixin item-card(data, type)
  if(type === 'mini')
    .item-card(data-card="card")
      .item-card__wrapper.item-card__wrapper--mini
        .item-card__close-icon(data-card="button-close")
          +icon("icon-close", 25, 25)
        if(data.img)
          a(href="card-page.html").item-card__img.item-card__img--mini
            +picture("content", data.img, "jpg", 158, 170, "card")
        .item-card__text-block.item-card__text-block--mini
          .item-card__top
            if(data.title)
              a(href="card-page.html").item-card__title= data.title
          .item-card__bottom
            if(data.type)
              p.item-card__type= data.type
            if(data.oldPrice)
              span.item-card__old-price= data.oldPrice
            if(data.price)
              if(data.discount)
                span.item-card__price.item-card__price--color-orange= data.price
              else
                span.item-card__price= data.price
            if(data.btn)
              .item-card__btn
                +btn({text: "Add to cart"}).btn--transparent.card-btn
            if(data.counter)
              +counter()
  else
    .item-card
      .item-card__wrapper
        if(data.img)
          a(href="card-page.html").item-card__img
            +picture("content", data.img, "jpg", 275, 365, "card")
            if(data.fav)
              +fav-button({name: `${data.name}`, checked: false, id: `${data.id}`})
            if(data.discount)
              .item-card__discount-icon
                +icon("discount", 50, 50)
        .item-card__text-block
          .item-card__top
            if(data.title)
              a(href="card-page.html").item-card__title= data.title
          .item-card__bottom
            if(data.type)
              p.item-card__type= data.type
            if(data.oldPrice)
              span.item-card__old-price= data.oldPrice
            if(data.price)
              if(data.discount)
                span.item-card__price.item-card__price--color-orange= data.price
              else
                span.item-card__price= data.price
