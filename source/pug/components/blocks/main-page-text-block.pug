mixin main-page-text-block(data)
  if(data.first)
    .main-content-block__text-block.main-content-block__text-block--first
      if(data.title)
        h2.main-content-block__title= data.title
      if(data.text)
        p.main-content-block__text= data.text
      if(data.collection)
      a(href="#").main-content-block__collection cмотреть коллекцию
  else
    .main-content-block__text-block
      if(data.title)
        h2.main-content-block__title= data.title
      if(data.text)
        p.main-content-block__text= data.text
      if(data.collection)
      a(href="#").main-content-block__collection cмотреть коллекцию
