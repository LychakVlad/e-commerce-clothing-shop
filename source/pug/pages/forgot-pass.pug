extends ../components/base/layout

block variables
  - const title = "forgot-pass" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "forgot-pass.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks


block main

  main
    div(data-validate)
      form(method="post")
        .sign-in__wrapper
          .sign-in__block
            h3.forgot-pass__title восстановить пароль
            +custom-input({inputType: "email", inputError: "Не корректный email", inputName: "user-email", inputPlaceholder: "E-mail", inputName: "user-email"})(data-validate-type="email")
            +btn({text: "Отправить", href: "email-sent.html"})(aria-label="Send email")




block modals
  +modal("modal--success modal--no-scale modal--fit-content")(data-modal="feedback")
    +modal-payment()
  +modal("modal--success modal--no-scale modal--fit-content")(data-modal="success")
    +modal-return()
