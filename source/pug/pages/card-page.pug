                .card-page__tab-about-right
                  +picture("content", 'card-page-img', "png", 229, 278, "card")
              .card-page__tab-review
                +title({titleStyle: 'Inter', titleType: 'h3', titleText: '5/5', titleColor: 'blue-whale'})







block modals
  +modal("modal--success modal--no-scale modal--fit-content")(data-modal="modal-payment")
    +modal-payment()
  +modal("modal--success modal--no-scale modal--fit-content")(data-modal="modal-return")
    +modal-return()
  +modal("modal--success modal--no-scale modal--fit-content")(data-modal="modal-size-chart")
